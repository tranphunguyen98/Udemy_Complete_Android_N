<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_view"
            android:id="@+id/recyclerView" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddPlace"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Thêm mới"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/btnAddPlace"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>