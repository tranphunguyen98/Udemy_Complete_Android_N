<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="8dp">

    <Button
            android:text="0"
            android:layout_width="0dp"
            android:id="@+id/btn3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:onClick="check"
            android:enabled="false"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn4"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn3"
            android:onClick="check"
            android:enabled="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expression"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0 + 0"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@color/colorAccent"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/countDown"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/result"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countDown"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#007481"
            tools:text="0"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@+id/expression"
            android:padding="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="0/0"
            android:background="#3c8400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/expression"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:id="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            android:layout_height="100dp"
            android:background="?attr/colorError"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/expression"
            android:onClick="check"
            android:enabled="false"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn1"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:layout_marginEnd="8dp"
            android:onClick="check"
            android:enabled="false"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlay"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/finalResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Kết quả: 1/2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalResult"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:onClick="check"/>
</android.support.constraint.ConstraintLayout>