<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_marginBottom="4dp">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 app:layout_constraintHorizontal_bias="0.0"
                                                 app:layout_constraintTop_toTopOf="parent"
    >
        <ImageView
                tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/imgAvatar"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.498"
                android:layout_width="60dp" android:layout_height="60dp"
                android:layout_margin="16dp"/>
        <TextView
                android:text="Trần Phú Nguyện"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                app:layout_constraintTop_toTopOf="@+id/imgAvatar"
                app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar" android:layout_marginStart="16dp"
                android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>